# -*- coding: utf-8 -*-
# vim: ft=jinja

{## Start with  defaults from defaults.sls ##}
{% import_yaml 'cassandra/defaults.yaml' as default_settings %}

{##
Setup variable using grains['os_family'] based logic, only add key:values here
that differ from whats in defaults.yaml
##}
{% set os_family_map = salt['grains.filter_by']({
        'Debian': {},
        'Suse': {},
        'Arch': {
            "pkg" : 'cassandra-arch',
        },
        'RedHat': {
            "config": '/etc/cassandra.conf',
        },
  }
  , grain="os_family"
  , merge=salt['pillar.get']('cassandra:lookup'))
%}
{## Merge the flavor_map to the default settings ##}
{% do default_settings.cassandra.update(os_family_map) %}

{## Merge in cassandra:lookup pillar ##}
{% set cassandra = salt['pillar.get'](
        'cassandra',
        default=default_settings.cassandra,
        merge=True
    )
%}
